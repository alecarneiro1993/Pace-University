<div id="wrapper">
  <span id='logo'>Slife</span><em id="slogan">Making College easier!</em>
</div>
  <div id="sign_up_form" class="container">
    <div id="no-border" class="panel panel-default">
      <div id="sign_up_header" class="panel-heading text-center">Registration</div>
        <div id="form_position" class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
            <div class="field input_margin_top">
              <span class="glyphicon glyphicon-user icon_input_space size"></span>
              <%= f.text_field :first_name, autofocus: true, class:"sign_input", :placeholder => "Your first name..."%>
            </div>
            <div class="field input_margin_top">
              <%= f.text_field :last_name,class:"sign_input input_position", :placeholder => "Your last name..."%>
            </div>
            <div class="field input_margin_top">
              <span class="glyphicon glyphicon-envelope icon_input_space size"></span>
              <%= f.email_field :email, class:"sign_input", :placeholder => "Your email address..."%>
            </div>
            <div class="field input_margin_top">
              <span class="glyphicon glyphicon-lock icon_input_space size"></span>
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Your password...", class:"sign_input" %>
              <% if @minimum_password_length %>
              <em id="minimum_length">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>
            <div class="field input_margin_top">
              <span class="glyphicon glyphicon-ok icon_input_space size"></span>
              <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Re-enter your password...", class:"sign_input" %>
            </div>
            <div class="field input_margin_top">
              <%= f.check_box :professor %>
              <%= f.label "Are you a Professor?" %>
            </div>
            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-default", id: "sign_submit" %>
              <%= link_to('Back to Log in page', new_user_session_path, {:id=>"sign_btn", :class=>"btn btn-default"}) %>
            </div>
          <% end %>
        </div>
      </div>
</div>
